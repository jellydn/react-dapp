{
  "name": "react-dapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.5.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.2.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-etherscan": "3.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.2",
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.21",
    "@types/react": "17.0.35",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.6",
    "dotenv": "15.0.0",
    "eslint": "8.8.0",
    "eslint-config-productsway": "0.1.9",
    "ethereum-waffle": "3.4.0",
    "hardhat": "2.8.3",
    "husky": "7.0.4",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.4.0",
    "typechain": "7.0.0",
    "typescript": "4.5.4",
    "vite": "2.7.13",
    "vite-plugin-windicss": "1.6.3",
    "windicss": "3.4.3"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}