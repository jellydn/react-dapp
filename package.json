{
  "name": "react-dapp",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.6.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "2.3.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.1.0",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.45",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint": "8.20.0",
    "eslint-config-productsway": "0.1.15",
    "ethereum-waffle": "3.4.4",
    "hardhat": "2.10.2",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.7.4",
    "vite": "3.0.4",
    "vite-plugin-windicss": "1.8.7",
    "windicss": "3.5.6"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}