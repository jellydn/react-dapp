{
	"name": "react-dapp",
	"version": "0.1.0",
	"scripts": {
		"prebuild": "npm run clean",
		"build": "npx hardhat compile --network localhost && tsc && vite build",
		"clean": "npx hardhat clean",
		"compile-node": "npx hardhat run scripts/deploy.js --network localhost",
		"dev": "vite",
		"lint:react": "eslint --cache --fix 'src/**/*.{js,jsx,ts,tsx}'",
		"lint:sol": "npx solhint 'contracts/**/*.sol'",
		"local-node": "npx hardhat node",
		"prepare": "husky",
		"serve": "vite preview"
	},
	"lint-staged": {
		"*.sol": "solhint 'contracts/**/*.sol' --fix",
		"*.js": "eslint --cache --fix",
		"*.{js,css,md,sol}": "prettier --write"
	},
	"dependencies": {
		"ethers": "5.7.2",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-hot-toast": "2.4.1"
	},
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.2.3",
		"@nomiclabs/hardhat-etherscan": "3.1.8",
		"@nomiclabs/hardhat-waffle": "2.0.6",
		"@trivago/prettier-plugin-sort-imports": "4.3.0",
		"@typechain/ethers-v5": "11.1.2",
		"@typechain/hardhat": "9.1.0",
		"@types/chai": "4.3.20",
		"@types/mocha": "10.0.9",
		"@types/node": "22.7.9",
		"@types/react": "18.3.12",
		"@types/react-dom": "18.3.1",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"@vitejs/plugin-react-refresh": "1.3.6",
		"chai": "5.1.2",
		"dotenv": "16.4.5",
		"eslint": "8.57.1",
		"eslint-config-productsway": "1.3.4",
		"ethereum-waffle": "4.0.10",
		"hardhat": "2.22.15",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"prettier": "3.3.3",
		"prettier-plugin-solidity": "1.4.1",
		"solhint": "4.5.4",
		"solhint-plugin-prettier": "0.1.0",
		"ts-node": "10.9.2",
		"typechain": "8.3.2",
		"typescript": "5.6.3",
		"vite": "5.4.10",
		"vite-plugin-windicss": "1.9.3",
		"windicss": "3.5.6"
	}
}
