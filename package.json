{
  "name": "react-dapp",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.6.7",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-hot-toast": "2.2.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.6",
    "@nomiclabs/hardhat-etherscan": "3.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "6.0.0",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.36",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.4",
    "@typescript-eslint/eslint-plugin": "5.24.0",
    "@typescript-eslint/parser": "5.24.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint": "8.15.0",
    "eslint-config-productsway": "0.1.14",
    "ethereum-waffle": "3.4.4",
    "hardhat": "2.9.5",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.7.0",
    "typechain": "8.0.0",
    "typescript": "4.6.4",
    "vite": "2.9.9",
    "vite-plugin-windicss": "1.8.4",
    "windicss": "3.5.3"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}