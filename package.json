{
  "name": "react-dapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.4.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.1.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.5",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.0.1",
    "@typechain/hardhat": "2.3.0",
    "@types/chai": "4.2.21",
    "@types/mocha": "9.0.0",
    "@types/node": "16.7.1",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "eslint": "7.32.0",
    "eslint-config-productsway": "0.1.8",
    "ethereum-waffle": "3.4.0",
    "hardhat": "2.6.1",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.17",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.2.1",
    "typechain": "5.1.2",
    "typescript": "4.3.5",
    "vite": "2.5.0",
    "vite-plugin-windicss": "1.2.7",
    "windicss": "3.1.7"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}