{
  "name": "react-dapp",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "clean": "npx hardhat clean",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "dev": "vite",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "local-node": "npx hardhat node",
    "prepare": "husky install",
    "serve": "vite preview"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  },
  "dependencies": {
    "ethers": "5.7.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "2.4.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@nomiclabs/hardhat-waffle": "2.0.6",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@typechain/ethers-v5": "11.1.1",
    "@typechain/hardhat": "8.0.3",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@types/node": "20.4.4",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.7",
    "dotenv": "16.3.1",
    "eslint": "8.45.0",
    "eslint-config-productsway": "0.2.0",
    "ethereum-waffle": "4.0.10",
    "hardhat": "2.17.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.9.1",
    "typechain": "8.3.1",
    "typescript": "5.1.6",
    "vite": "4.4.7",
    "vite-plugin-windicss": "1.9.0",
    "windicss": "3.5.6"
  }
}
