{
  "name": "react-dapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "^5.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.1.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.9",
    "@vitejs/plugin-react-refresh": "1.3.5",
    "chai": "^4.3.4",
    "eslint": "7.31.0",
    "eslint-config-productsway": "^0.1.3",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.4.3",
    "husky": "7.0.1",
    "lint-staged": "11.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.15",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "typechain": "^5.1.1",
    "typescript": "4.3.5",
    "vite": "2.4.2",
    "vite-plugin-windicss": "^1.2.4",
    "windicss": "^3.1.5"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}